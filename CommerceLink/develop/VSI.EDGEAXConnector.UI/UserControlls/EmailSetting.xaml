        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Email Settings to send emails" Margin="5,10,5,5" Foreground="#FF123A70" FontWeight="Medium">
