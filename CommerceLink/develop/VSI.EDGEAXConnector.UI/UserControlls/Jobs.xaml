<UserControl x:Class="VSI.EDGEAXConnector.UI.UserControlls.Jobs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userControl="clr-namespace:VSI.EDGEAXConnector.UI.UserControlls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="White">
    <Grid>
        <Border Grid.Row="1" Margin="0,1,0,0" Background="#ffffff">
            <TabControl TabStripPlacement="Top" BorderThickness="1">
                <TabItem Header="CommerceLink Jobs" Style="{DynamicResource TabItemStyle}" >
                    <ScrollViewer>
                        <userControl:JobsDetail/>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="File Sync Jobs" Style="{DynamicResource TabItemStyle}">
                    <ScrollViewer>
                        <userControl:FileJobsDetail/>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
