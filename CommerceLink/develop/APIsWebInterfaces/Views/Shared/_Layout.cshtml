<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - CommerceLink WebAPIs Interfaces</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("CommerceLink WebAPIs Interfaces", "GiftCard", "GiftCard")</p>
                </div>
                <div class="float-right">
                    @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Gift Card", "GiftCard", "GiftCard")</li>
                            <li>@Html.ActionLink("Inventory LookUp", "Inventory", "Inventory")</li>
                            <li>@Html.ActionLink("Loyalty", "Loyalty", "Loyalty")</li>
                            <li>@Html.ActionLink("Payment", "Payment", "Payment")</li>
                            <li>@Html.ActionLink("Shipping", "Shipping", "Shipping")</li>
                            <li>@Html.ActionLink("Store", "Store", "Store")</li>
                            <li>@Html.ActionLink("Wish List", "WishList", "WishList")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - CommerceLink WebAPIs Interfaces</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
