@{
    ViewBag.Title = "Inventory";
}

<div class="row" style="width:100%;float:left;">
    <div class="col-md-11">
        <hr />
        <div>
            <p class="headingStyle" style="font-size:large;">Loyalty Card Info</p>
        </div>
        <hr />

        <div style="display: block">@ViewBag.Message</div>


        @using (Html.BeginForm("LoyaltyActions", "Loyalty", null, FormMethod.Post, new { @class = "form-horizontal", id = "LoyaltyForm" }))
        {
            <div class="row">
                <div class="col-md-4 form-group" style="float:left; margin:5px">
                    <label class="control-label col-md-4 small ">Card Number:</label>
                    <div class="col-md-6 paddingLeftRight0">
                        @Html.TextBox("cardNo", null, new { id = "cardNo", Class = "form-control", Value = "55003" })
                        eg. 55003
                    </div>
                </div>
            </div>
            <br />
            <div class="row" style="float: right">
                <div class="col-md-4 form-group" style="float:left; margin:5px">
                    <label class="control-label col-md-4 small ">&nbsp;</label>
                    <input type="submit" class="btn btn-success col-md-push-2" value="Get Card Info" id="getCardInfo" name="command" style="height:32px;">
                </div>
            </div>
        }

    </div>
</div>





<div class="row" style="width:100%;float:left;">
    <hr />
    <h3>Output Result:</h3>
    <hr />
    <div class="col-md-11" id="divData">
        <p>@ViewBag.Result</p>
    </div>
</div>


